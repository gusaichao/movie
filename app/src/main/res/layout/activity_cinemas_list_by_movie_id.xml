<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.CinemasListByMovieIdActivity">

    <TextView
        android:id="@+id/cinemaslistbymovieid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="铁血战士"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_35"
        />
    <TextView
        android:id="@+id/cinemaslistbymovieid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择合适的影院"
        android:textSize="@dimen/sp_10"
        android:textColor="#b1145d"
        app:layout_constraintTop_toBottomOf="@id/cinemaslistbymovieid_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        />
    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/cinemaslistbymovieid_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/cinemaslistbymovieid_recy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/com_icon_back_default"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_24"
        />

</android.support.constraint.ConstraintLayout>