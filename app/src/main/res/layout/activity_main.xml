<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.WelcomeActivity">

    <ImageView
        android:id="@+id/yidaoye_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/qidongye"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/qidongye_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="维度影院"
        android:textSize="@dimen/sp_20"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/qidongye_text2"
        android:layout_marginBottom="@dimen/dp_24"
        />
    <TextView
        android:id="@+id/qidongye_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一场不一样的视觉盛宴"
        android:textSize="@dimen/sp_14"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_98"
        />
</android.support.constraint.ConstraintLayout>