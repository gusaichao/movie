<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.XiangActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/xiangqingbg"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/com_icon_movie_default"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@mipmap/com_icon_movie_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电影详情"
        android:textSize="@dimen/sp_14"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/dp_6"
        app:layout_constraintLeft_toRightOf="@id/com_icon_movie_default"
        app:layout_constraintTop_toTopOf="@id/com_icon_movie_default"
        app:layout_constraintBottom_toBottomOf="@id/com_icon_movie_default"
        />
    <CheckBox
        android:id="@+id/xiang_checkbox"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:button="@drawable/collection_defaultandselsected"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        />
    <TextView
        android:id="@+id/xiang_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="铁道战士"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_70"
        />
    
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/xiang_movie_image"
        android:layout_width="@dimen/dp_259"
        android:layout_height="@dimen/dp_360"
        android:src="@mipmap/loginbg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xiang_movie_name"
        android:layout_marginTop="@dimen/dp_30"
        />
    <LinearLayout
        android:id="@+id/xiang_lin"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_goneMarginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@id/xiang_movie_image"
        android:layout_marginLeft="@dimen/dp_24"
        >
    <TextView
        android:id="@+id/xiang_text_xiangqing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详情"
        android:textSize="@dimen/sp_14"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/xiangqing_shape_bg"
        android:layout_weight="1"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/xiang_text_yugao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预告"
        android:textSize="@dimen/sp_14"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/xiangqing_shape_bg"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_gravity="center"
        />
        <TextView
            android:id="@+id/xiang_text_juzhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剧照"
            android:textSize="@dimen/sp_14"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/xiangqing_shape_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_24"
            />
        <TextView
            android:id="@+id/xiang_text_yingping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影评"
            android:textSize="@dimen/sp_14"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="@drawable/xiangqing_shape_bg"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/xiang_image_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/com_icon_back_default"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/xiang_lin"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="@id/xiang_lin"
        />
    <TextView
        android:id="@+id/xiang_text_goupiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购票"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_20"
        android:background="@drawable/goupiao_shape_bg"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/xiang_lin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        />
</android.support.constraint.ConstraintLayout>