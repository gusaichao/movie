<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mvp.ui.fragment.homefragment.yingyuanFragment">

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/navigation_btn"
        app:layout_constraintBottom_toBottomOf="parent">
    </FrameLayout>
    <ImageView
        android:id="@+id/yy_dingwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cinema_detail_icon_location_default"
        android:padding="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/yy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京"
        android:maxLength="6"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@id/yy_dingwei"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="parent"
        />

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/yy_search_linear"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_24"
        android:background="@drawable/cinema_search_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/yy_search_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:paddingLeft="6dp"
                android:src="@mipmap/com_icon_search_default" />
            <EditText
                android:id="@+id/yy_search_edname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:ems="8"
                android:padding="5dp"
                android:textColor="#f2f2f2"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/yy_search_textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="3dp"
                android:text="搜索"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/navigation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_54"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >

    <RadioButton
        android:id="@+id/btn1"
        android:gravity="center"
        android:button="@null"
        android:checked="true"
        android:text="推荐影院"
        android:textSize="@dimen/sp_14"
        android:textColor="#ffffff"
        android:background="@drawable/yingyuan_fragment_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_weight="1"/>

    <RadioButton
        android:id="@+id/btn2"
        android:gravity="center"
        android:button="@null"
        android:text="附近影院"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/yingyuan_fragment_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_weight="1"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>