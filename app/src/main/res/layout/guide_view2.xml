<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/yindaoye2_image"
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_205"
        android:src="@mipmap/yindaoye2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_150"
        />
    <TextView
        android:id="@+id/yindaoye2_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一场电影"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yindaoye2_image"
        android:layout_marginTop="@dimen/dp_60"
        />
    <TextView
        android:id="@+id/yindaoye2_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="看遍人生百态"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yindaoye2_text1"
        android:layout_marginTop="@dimen/dp_21"
        />
</android.support.constraint.ConstraintLayout>