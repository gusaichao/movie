<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/remendianying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门电影"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        />
    <TextView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_3"
        android:background="@drawable/home_text"
        app:layout_constraintTop_toBottomOf="@id/remendianying"
        app:layout_constraintLeft_toLeftOf="@id/remendianying"
        android:layout_marginTop="@dimen/dp_4"
        />
    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@mipmap/com_icon_next_default"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_24"
        app:layout_constraintTop_toTopOf="@id/remendianying"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/hotmovie_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/remendianying"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintTop_toBottomOf="@id/remendianying"
        android:layout_marginTop="@dimen/dp_24"
        />

</android.support.constraint.ConstraintLayout>