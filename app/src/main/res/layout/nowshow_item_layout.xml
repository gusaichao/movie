<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image2"
        android:layout_width="@dimen/dp_126"
        android:layout_height="@dimen/dp_164"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dp_20"
        fresco:progressBarImage="@mipmap/icon_progress_bar"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="5000"
        app:layout_constraintCircleRadius="@dimen/dp_8"
        fresco:fadeDuration="3000"
        />
    <TextView
        android:layout_width="@dimen/dp_3"
        android:layout_height="@dimen/dp_18"
        android:background="@drawable/home_text"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@id/image2"
        app:layout_constraintLeft_toLeftOf="@id/image2"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/name2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:textSize="@dimen/sp_14"
        android:text="名字爱的飒"
        android:maxLength="6"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#999999"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@id/image2"
        app:layout_constraintLeft_toLeftOf="@id/image2"
        app:layout_constraintRight_toRightOf="@id/image2"
        />


</android.support.constraint.ConstraintLayout>