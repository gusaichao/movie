<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_fragment_item_shape"
    android:padding="@dimen/dp_5"
    android:orientation="vertical">
    <TextView
        android:id="@+id/paid_flim_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="14sp"
        android:text="铁血战士"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/gopay"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textColor="#fff"
        android:text="去付款"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:background="@drawable/login_shape_bg"/>
    <LinearLayout
        android:layout_below="@+id/paid_flim_name"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/paid_flim_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="14:40:00-16:46:00"
            android:textSize="14sp"
            android:textColor="#f77421"/>
        <TextView
            android:id="@+id/flim_time_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="开始时间  结束时间"
            android:textSize="14sp"
            android:textColor="#f77421"/>
        <TextView
            android:id="@+id/paid_flim_order"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="订单号:000000000"/>
        <TextView
            android:id="@+id/paid_start_time"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="下单时间:2018-12-11  14:00"/>
        <TextView
            android:id="@+id/paid_cinema"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="xxxxxxxx"/>
        <TextView
            android:id="@+id/paid_cinemahall"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="影厅:xxxxxxx"/>
        <TextView
            android:id="@+id/paid_time"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="时间:2018-10-11  14:20-15:20"/>
        <TextView
            android:id="@+id/paid_num"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="数量:x张"/>
        <TextView
            android:id="@+id/paid_money"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="金额:xxx元"/>
    </LinearLayout>
</RelativeLayout>
