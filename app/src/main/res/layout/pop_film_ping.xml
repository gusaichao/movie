<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:orientation="vertical"
    android:background="#FFF"
    >
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_20"
            android:text="影评"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:id="@+id/tui"
            />
        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_3"
            android:layout_below="@+id/tui"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/home_text" />

        <ImageView
            android:id="@+id/pop_detail_four"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentRight="true"
            android:background="@mipmap/com_icon_down_default" />
    </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:layout_marginLeft="@dimen/dp_24"
       android:layout_marginRight="@dimen/dp_24"
       >
       <com.jcodecraeer.xrecyclerview.XRecyclerView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/frag_recommend_4"
           />
       <ImageView
           android:id="@+id/pinglun_back"
           android:layout_width="@dimen/dp_60"
           android:layout_height="@dimen/dp_60"
           android:src="@mipmap/com_icon_back_default"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="@dimen/dp_20"
           />
        <ImageView
            android:id="@+id/white_pinglun"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:src="@mipmap/com_icon_publish_default"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            />
   </RelativeLayout>


</LinearLayout>