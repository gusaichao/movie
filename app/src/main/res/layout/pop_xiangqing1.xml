<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_40">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_30"
        >
        <RelativeLayout
            android:id="@+id/pop_xiangqing_rela"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_30"
            android:background="#fff">

            <TextView
                android:textSize="@dimen/sp_12"
                android:id="@+id/pop_detail_typetext"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_155"
                android:text="daasdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/sp_12"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_155"
                android:text="daasdad"
                android:id="@+id/pop_detail_director"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/pop_detail_typetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/sp_12"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_155"
                android:text="daasdad"
                android:layout_below="@id/pop_detail_director"
                android:id="@+id/pop_detail_minute"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/sp_12"
                android:layout_below="@id/pop_detail_minute"
                android:id="@+id/pop_detail_place"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_155"
                android:text="daasdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/pop_detail_finish"
                android:layout_alignParentRight="true"
                android:src="@mipmap/com_icon_down_default"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_20"
                />
            <LinearLayout
                android:layout_below="@id/pop_detail_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/film_fenlei"
                    android:textSize="20dp"
                    android:text="剧情简介"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/film_fenlei"
                    android:background="#750F41"
                    android:layout_width="50dp"
                    android:layout_height="3dp"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20dp"
                    android:text="演职人员"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/film_fenlei"
                    android:background="#750F41"
                    android:layout_width="50dp"
                    android:layout_height="3dp"/>
                <RelativeLayout
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/pop_leftbutton"
                        android:background="#F79D3E"
                        android:padding="10dp"
                        android:text="演员名字"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_alignParentRight="true"
                        android:background="#F79D3E"
                        android:padding="10dp"
                        android:text="饰演角色"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/revs"
                        android:layout_below="@id/pop_leftbutton"
                        android:layout_width="312dp"
                        android:layout_marginTop="12dp"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:layout_below="@id/revs"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/dp_111"
            android:layout_height="@dimen/dp_149"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/loginbg"
            android:scaleType="centerCrop"
            android:id="@+id/image"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_24"
            />
    </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>