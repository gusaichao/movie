<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_4"
    android:padding="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="@dimen/dp_90">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/schedule_item_screeningHall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中影大厅全景"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            />
        <TextView
            android:id="@+id/schedule_item_beginTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:40"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/schedule_item_screeningHall"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_21"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/schedule_item_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----16:10"
            app:layout_constraintLeft_toRightOf="@id/schedule_item_beginTime"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/schedule_item_screeningHall"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@id/schedule_item_beginTime"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/schedule_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/schedule_item_screeningHall"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:textColor="#333333"
            android:layout_marginRight="@dimen/dp_6"
            app:layout_constraintRight_toLeftOf="@id/schedule_item_price"
            />
        <TextView
            android:id="@+id/schedule_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:textColor="#b11450"
            android:textSize="@dimen/sp_30"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dp_34" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/com_icon_next_default"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>